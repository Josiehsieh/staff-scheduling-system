<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_event_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/widget_event_background"
    android:clickable="true"
    android:focusable="true">

    <!-- Event Color Indicator -->
    <View
        android:id="@+id/widget_event_color"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:layout_marginEnd="8dp" />

    <!-- Event Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Event Title -->
        <TextView
            android:id="@+id/widget_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="會議"
            android:textColor="#212121"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Event Time -->
        <TextView
            android:id="@+id/widget_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09:00 - 10:00"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/widget_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="會議室A"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout> 