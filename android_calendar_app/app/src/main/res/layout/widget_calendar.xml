<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Widget Header -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/widget_header_background"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/25 (一)"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_event_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 個事件"
                android:textColor="#E0E0E0"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/widget_add_event"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/widget_button_background"
                android:contentDescription="新增事件"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/widget_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_refresh"
                android:background="@drawable/widget_button_background"
                android:contentDescription="重新整理"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Events List -->
    <ListView
        android:id="@+id/widget_events_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:divider="@null"
        android:dividerHeight="4dp"
        android:scrollbars="none"
        android:background="@android:color/transparent" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/widget_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日無事件"
        android:textColor="#757575"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

</LinearLayout> 